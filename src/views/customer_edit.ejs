<%-  include ('partials/_header') %>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="POST">

                        <div class="form-group">                  
                          <input type="text" name="name" id="" class="form-control" value="<%= data.name %>" aria-describedby="helpId">                  
                        </div>
                        <div class="form-group">                  
                            <input type="text" name="address" id="" class="form-control"  value="<%= data.address %>" aria-describedby="helpId">                  
                          </div>
                        <div class="form-group">                  
                          <input type="text" name="phone" id="" class="form-control" value="<%= data.phone %>" aria-describedby="helpId">                  
                        </div>
                       <button type="submit" class="btn btn-primary">SAVE CUSTOMER</button>   
                    
                    </form>
                </div>  
            </div>
        </div>    
    </div>
</div>

<%-  include ('partials/_footer') %>
